
version: '3.7'
services:

  

  ci-db:
    container_name: ci-db
    image: mysql:8.0
    networks:
      - ci-network
    environment:
      - MYSQL_USER=youssef
      - MYSQL_PASSWORD=Youssef1+2
      - MYSQL_DATABASE=achatdb
      - MYSQL_ROOT_PASSWORD=Youssef1+3
    volumes:
      - dbvol:/var/lib/mysql
    ports:
      - "3306:3306"
    restart: always

  ci-app:
    build:
      context: .
    container_name: ci-spring
    image: 
    ports:
      - "8089:8089"
    networks:
      - ci-network
    depends_on:
      - ci-db
    environment:
      - MYSQL_HOST=ci-db
      - MYSQL_USERNAME=youssef
      - MYSQL_PASSWORD=Youssef1+2
      - MYSQL_DATABASE=achatdb
      - MYSQL_PORT=3306
      

networks:
  ci-network:
    name: ci-network

